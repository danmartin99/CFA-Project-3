
 <form action="/stock/{{stock._id}}/sale" method="post" class="form-horizontal" role="form" style="width: 50%;">
     <div class="form-group">
    <div class="col-sm-2">
      <label for="name" class="control-label">Name</label>
    </div>
      <div class="col-sm-10">
        <input type="text" class="form-control" name="name" placeholder="Stock Name" value="{{stock.name}}" readonly>
      </div>
    </div>

    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="stock_plu" class="control-label">PLU</label>
  		</div>
  		<div class="col-sm-10">
  			<input type="number" class="form-control" name="stock_plu" placeholder="Stock PLU" value="{{stock.plu}}" readonly="">
  		</div>
    </div>
    
    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label">Unit Price</label>
  		</div>
  		<div class="col-sm-10">
  			<input type="float:right" class="form-control" id="{{stock.sellprice}}" name="{{stock.sellprice}}" placeholder="" value="{{stock.sellprice}}" readonly>
  		</div>
    </div>

    <div class="form-group">
      <div class="col-sm-2">
        <label for="qty_sold" class="control-label">Enter</label>
      </div>
      <div class="col-sm-10">
        <input type="number" class="form-control" id="qty_sold" name="qty_sold" placeholder="Qty Sold" value="">
      </div>
    </div>
   
    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label"></label>
  		</div>
  		<div class="col-sm-10">
  			<input type="submit" class="form-control" >
  		</div>
    </div>   
  </form>  

	