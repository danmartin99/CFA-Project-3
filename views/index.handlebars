<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>


{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}

{{#if uniquenessErrors}}
  <div class="alert alert-danger">{{uniquenessErrors.errors.plu.message}}</div>
{{/if}}

<form action="/stock" method="post" class="form-horizontal" role="form" style="width: 50%;">
  <div class="form-group">
  	<div class="col-sm-2">
  		<label for="name" class="control-label">Name</label>
  	</div>
  		<div class="col-sm-10">
  			<input type="text" class="form-control" name="stock_name" placeholder="Stock Name" value="">
  		</div>
    </div>

    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label">PLU</label>
  		</div>
  		<div class="col-sm-10">
  			<input type="number" class="form-control" name="stock_plu" placeholder="Stock PLU" value="">
  		</div>
    </div>

    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label">Cost</label>
  		</div>
  		<div class="col-sm-10">
  			<input type="float:right" class="form-control" name="stock_costprice" placeholder="Cost Price" value="">
  		</div>
    </div>

    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label">Sell</label>
  		</div>
  		<div class="col-sm-10">
  			<input type="float:right" class="form-control" name="stock_sellprice" placeholder="Sell Price" value="">
  		</div>
    </div>

    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label">Category</label>
  		</div>
  		<div class="col-sm-10">
  			<input type="text" class="form-control" name="stock_category" placeholder="Category" value="">
  		</div>
    </div>    

    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label">Qty</label>
  		</div>
  		<div class="col-sm-10">
  			<input type="float:right" class="form-control" name="stock_qtyOnHand" placeholder="Quantity on Hand" value="">
  		</div>
    </div> 

    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label">Reorder</label>
  		</div>
  		<div class="col-sm-10">
  			<input type="float:right" class="form-control" name="stock_reorderLevel" placeholder="Reorder Level" value="">
  		</div>
    </div> 

    <div class="form-group">
    	<div class="col-sm-2">
  			<label for="name" class="control-label"></label>
  		</div>
  		<div class="col-sm-10">
  			<input type="submit" class="form-control">
  		</div>
    </div>                    

<div class="container">
  <h2>Stock Rows</h2>          
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Stock Name</th>
        <th>Stock PLU</th>
        <th>Edit</th>
        <th>Delete</th>
        <th>Sell</th>
        <th>Receipt</th>
        <th>Take</th>
      </tr>
    </thead>
    <tbody>
    {{#each stock}}
      <tr>
	  		<td>{{this.name}}</td>
	  		<td>{{this.plu}}</td>
	   		<td> <a href=/stock/{{this._id}}/edit>Edit</a></td>
				<td> <a href=/stock/{{this._id}}/delete>Delete</a></td>  
				<td> <a href=/stock/{{this._id}}/sell>Sell</a></td> 
				<td> <a href=/stock/{{this._id}}/receipt>Receipt</a></td> 
				<td> <a href=/stock/{{this._id}}/take>Take</a></td> 
      </tr>
      	{{/each}}
    </tbody>
  </table>
</div>

</body>
</html>



	